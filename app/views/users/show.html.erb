<div class="container px-5 px-sm-0">
  <div class="row">
<%= render "books/form",book: @book,user: @user %>

<div class="col-md-8 offset-1">
<h1>投稿一覧</h1>
<table class="table">
  <tr>
    <th></th>
    <th>タイトル</th>
    <th>感想</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
</div>
</div>
</div>
