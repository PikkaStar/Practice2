<% if @user.errors.any? %>
<%= @user.errors.count %>個のエラーを確認しました

  <% @user.errors.full_messages.each do |message|%>

  <li><%= message %></li>
  <% end %>

<% end %>

<h1>プロフィール編集</h1>
<%= form_with model: @user do |f| %>
<%= f.label :name,"名前" %><br>
<%= f.text_field :name,autofocus: true %><br>

<%= f.label :profile_image,"画像" %><br>
<%= f.file_field :profile_image,accept: "image/*" %><br>


<%= f.label :introduction,"  自己紹介文" %><br>
<%= f.text_area :introduction %><br>
<%= f.submit "更新" %>
<% end %>