<%= render 'books/form',book: @book %>

<h1>ユーザー一覧</h1>

<table>
  <tr>
    <th>画像</th>
    <th>名前</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= link_to user_path(user.id) do %>
      <%= image_tag user.get_profile_image(100,100) %>
      <% end %>
    </td>
    <td><%= user.name %></td>
    <td><%= link_to "詳細",user_path(user.id) %></td>
  </tr>
  <% end %>
</table>