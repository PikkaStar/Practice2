   
    <div class="col-md-3">
        <%= flash[:notece] %>
<h1>User info</h1>

<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tr>
    <td>名前</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%= user.introduction %></td>
  </tr>
</table>
<div class="row">
<%= link_to edit_user_path(user),class: "btn btn-outline-secondary btn-block" do %>
 <i class="fas fa-user-cog"></i>
 <% end %>
</div>

<h1>新規投稿</h1>
 <% if book.errors.any? %>
    <%= book.errors.count %>件のエラーを確認しました
    <% book.errors.full_messages.each do |message| %>
    <li>
        <%= message %>
    </li>
    <% end %>
    <% end %>
<%= form_with model: book do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title,autofocus: true,placeholder: "タイトル" %><br>
<%= f.label :body,"Opinion" %><br>
<%= f.text_area :body,placeholder: "感想" %><br>
<%= f.submit "投稿" %>
<% end %>
</div>
